@page
@attribute [AllowAnonymous]
@model FreedomITAS.Pages.Clients.ClientCreateModel
@{
    ViewData["Title"] = "Create Client";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0 text-center py-2">Freedom IT – New Client Registration</h3>
        </div>
        <div class="card-body p-4">
            <form method="post" asp-page-handler="Create" id="clientForm">
                <div class="row g-3">
                    <!-- Company Info -->
                    <div class="col-md-6">
                        <label asp-for="Client.CompanyName" class="form-label fw-semibold">Company Name</label>
                        <input asp-for="Client.CompanyName" class="form-control" />
                        <span asp-validation-for="Client.CompanyName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Client.CompanyABN" class="form-label fw-semibold">Company ABN</label>
                        <input asp-for="Client.CompanyABN" class="form-control" />
                        <span asp-validation-for="Client.CompanyABN" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Client.CompanyPhone" class="form-label fw-semibold">Company Phone</label>
                        <input asp-for="Client.CompanyPhone" class="form-control" />
                        <span asp-validation-for="Client.CompanyPhone" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Client.NumberStreet" class="form-label fw-semibold">Street Address</label>
                        <input asp-for="Client.NumberStreet" class="form-control" />
                        <span asp-validation-for="Client.NumberStreet" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Client.City" class="form-label fw-semibold">City/Town</label>
                        <input asp-for="Client.City" class="form-control" />
                        <span asp-validation-for="Client.City" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Client.StateName" class="form-label fw-semibold">State</label>
                        <select asp-for="Client.StateName" class="form-select">
                            <option value="">-- Select State --</option>
                            <option value="NSW">NSW</option>
                            <option value="VIC">VIC</option>
                            <option value="QLD">QLD</option>
                            <option value="WA">WA</option>
                            <option value="SA">SA</option>
                            <option value="TAS">TAS</option>
                            <option value="ACT">ACT</option>
                            <option value="NT">NT</option>
                        </select>
                        <span asp-validation-for="Client.StateName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Client.Postcode" class="form-label fw-semibold">Post Code</label>
                        <input asp-for="Client.Postcode" class="form-control" />
                        <span asp-validation-for="Client.Postcode" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Client.Country" class="form-label fw-semibold">Country</label>
                        <input asp-for="Client.Country" class="form-control" />
                        <span asp-validation-for="Client.Country" class="text-danger small"></span>
                    </div>

                    <!-- Contact Info -->
                    <div class="col-md-4">
                        <label asp-for="Client.ContactFirstName" class="form-label fw-semibold">Contact First Name</label>
                        <input asp-for="Client.ContactFirstName" class="form-control" />
                        <span asp-validation-for="Client.ContactFirstName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Client.ContactMiddleName" class="form-label fw-semibold">Contact Middle Name</label>
                        <input asp-for="Client.ContactMiddleName" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Client.ContactLastName" class="form-label fw-semibold">Contact Last Name</label>
                        <input asp-for="Client.ContactLastName" class="form-control" />
                        <span asp-validation-for="Client.ContactLastName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Client.ContactEmail" class="form-label fw-semibold">Contact Email</label>
                        <input asp-for="Client.ContactEmail" class="form-control" />
                        <span asp-validation-for="Client.ContactEmail" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Client.ContactMobile" class="form-label fw-semibold">Contact Mobile</label>
                        <input asp-for="Client.ContactMobile" class="form-control" />
                        <span asp-validation-for="Client.ContactMobile" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-success px-5 py-2 fw-bold">
                        <i class="bi bi-person-plus-fill me-2"></i>Submit Client
                    </button>
                </div>

                <vc:validation-summary model-only="true" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Optional: Bootstrap Icons (if you want the icons to show) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
